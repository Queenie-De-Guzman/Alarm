<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alarm.Pages.AlarmPage"
             Title="Alarm Clock">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Select Alarm Date:" FontSize="20"/>
        <DatePicker x:Name="alarmDatePicker" />

        <Label Text="Select Alarm Time:" FontSize="20"/>
        <TimePicker x:Name="alarmTimePicker" />

        <Button Text="Set Alarm" Clicked="OnSetAlarmClicked" />
        <Label x:Name="statusLabel" Text="No alarm set." FontSize="16" />
    </VerticalStackLayout>
</ContentPage>
